  <packaging>jar</packaging>

  <name>skeleton</name>
  <url>http://maven.apache.org</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

    <!-- These properties will be set by the Maven Dependency plugin -->
